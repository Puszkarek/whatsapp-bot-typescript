{
  "$schema": "https://json.schemastore.org/swcrc",

  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": false,
      "dynamicImport": false,
      "dts": true,
      "importAssertions": false
    },
    "baseUrl": "./dist",
    "externalHelpers": false,
    "loose": true,
    "paths": { "~/*": ["*"] },
    "target": "es2022"
  },

  "module": {
    "type": "commonjs",

    // These are defaults.
    "strict": true,
    "strictMode": true,
    "lazy": false,
    "noInterop": false
  },

  "minify": false
}
